<ContentDialog
    x:Class="Philosopher.Multiplat.WinPhone.Controls.PromptDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Philosopher.Multiplat.WinPhone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    IsPrimaryButtonEnabled="True"
    IsSecondaryButtonEnabled="True"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBlock Style="{StaticResource MessageDialogContentStyle}" 
                   TextWrapping="Wrap"
                   Text="{Binding MessageText}"/>        

        <TextBox x:Name="InputBox" 
                 Margin="0 12 0 0"
                 Text="{Binding InputText, Mode=TwoWay}"
                 PlaceholderText="{Binding PlaceholderText}"/>
        <PasswordBox x:Name="PasswordBox" 
                     Margin="0 12 0 0"
                     Password="{Binding InputText, Mode=TwoWay}"
                     PlaceholderText="{Binding PlaceholderText}"
                     Visibility="Collapsed"/>
    </StackPanel>
</ContentDialog>
